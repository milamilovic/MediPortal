<Window x:Class="ZdravoCorp.HealthInstitution.GUI.CommunicationSystem.ChatView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZdravoCorp.HealthInstitution.GUI.CommunicationSystem"
        mc:Ignorable="d" Name="personalChat"
        Height="400" Width="400">
    <StackPanel Background="#625750">
        <StackPanel Width="300" Height="300" Background="#c6bcb6" Margin="0 20 0 0"  Name="chatPanel"></StackPanel>
        <WrapPanel HorizontalAlignment="Center">
            <TextBox Name ="newMessage" Text="{Binding NewMessage}" HorizontalContentAlignment="Left" FontSize="10" Height="30" Width="250" Background="#e0e2e4"></TextBox>
            <Button Width="50" Height="30" Command="{Binding SendMessageCommand}">Send >></Button>
        </WrapPanel>
    </StackPanel>
</Window>
